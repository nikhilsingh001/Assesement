<script>
    $(document).ready(function () {
        reportdata();

    });

    function reportdata() {
        debugger;
        $.getJSON("http://localhost:50731/api/values/Reportdata", function (datajson) {
            console.log(datajson)
            $('#demoGrid').DataTable(
                {
                    bLengthChange: true,
                    lengthMenu: [[5, 10, -1], [5, 10, "All"]],
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: datajson,
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            extend: 'csvHtml5',
                            text: 'Copy all data',
                            exportOptions: {
                                modifier: {
                                    search: 'none'
                                }
                            }
                        }
                    ],

                    columns: [{ 'data': 'Name' },
                    { 'data': 'ProducttName' },
                    { 'data': 'Address' },
                    { 'data': 'City' },
                    { 'data': 'State' },
                    { 'data': 'Pincode' },
                    { 'data': 'DOB' }
                    ]


                });

        });

    }
</script>
